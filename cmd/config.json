{
  "port": 8080,
  "middlewares": [
    {
      "name": "logging"
    }
  ],
  "endpoints": [
    {
      "uris": [
        "http://127.0.0.1:8000",
        "http://127.0.0.1:8001",
        "http://127.0.0.1:8002"
      ],
      "protocol": "http",
      "timeout": 2000,
      "predicates": {
        "path": "/ping/*",
        "method": "GET"
      }
    },
    {
      "uris": [
        "http://127.0.0.1:8003"
      ],
      "protocol": "grpc",
      "timeout": 2000,
      "predicates": {
        "path": "/hello.Greater/*",
        "method": "POST"
      },
      "middlewares": [
        {
          "name": "grpc",
          "args": [
            {
              "key": "http_status",
              "value": "400"
            },
            {
              "key": "grpc_error_template",
              "value": "{\"code\": {status},\"message\": \"{message}\"}"
            }
          ]
        }
      ]
    }
  ]
}
